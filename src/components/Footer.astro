<style>
  .social-footer {
  background-color: var(--color-dark);
  margin-top: 1rem;
  padding: 1rem 0;
  text-align: center;
}

.container {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.social-link {
  display: inline-block;
  color: var(--color-grey);
  transition: color 0.3s ease, transform 0.3s ease;
}

.social-link:hover {
  color: var(--color-light);
  transform: scale(1.1);
}

.icon {
  width: 24px;
  height: 24px;
}

/* Responsividad */
@media (max-width: 768px) {
  .container {
    gap: 0.5rem;
  }
}

@media (max-width: 480px) {
  .icon {
    width: 20px;
    height: 20px;
  }
}

</style>