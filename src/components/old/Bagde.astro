---
interface Props{
  text:string;
  gradient:string;
}
const {text,gradient} = Astro.props;
---

<span class="card__badge" style={`--card-gradient: ${gradient}`}>{text}</span>

<style>
.card__badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    line-height: 1.4rem;
    font-weight: 600;
    color: var(--color-dark);
    background: var(--card-gradient);
    border-radius: 1rem;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
}
</style>