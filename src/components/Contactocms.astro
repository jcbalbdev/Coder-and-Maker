<div class="box-contactanos">
  <div id="contactanos" class="contact-form">
    <div class="header-tag">
      <span class="squart"></span>
        
      <h2>Contactanos</h2>
    </div>
    
    <div class="form-container">
      <!-- Columna Izquierda -->
      <div class="form-column">
        <div class="input-group">
          <h2 class="title">Correo electrónico</h2>
          <p class="subtitle">coderandmakersociety@gmail.com</p>
        </div>
        
        <div class="input-group">
          <h2 class="title">Telefono</h2>
          <p class="subtitle">+51956773758</p>
        </div>
        
        <div class="social-section">
          <h3>Redes Sociales</h3>
          <div class="social-icons">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
          </div>
        </div>
      </div>
  
      <!-- Columna Derecha -->
      <div class="form-column">
  
        <div class="input-group">
          <label>Nombre Completo</label>
          <input type="text">
        </div>
  
        <div class="double-inputs">
          <div class="input-group">
            <label>Correo electrónico</label>
            <input type="email">
          </div>
          
          <div class="input-group">
            <label>Teléfono</label>
            <input type="tel">
          </div>
        </div>
  
        <div class="input-group">
          <label>Mensaje</label>
          <input type="text">
        </div>
  
        <button class="submit-btn">Contactanos</button>
      </div>
    </div>
  </div>
</div>

<style>
  .box-contactanos{
    background-color: #00303c;
    width: 100%;
    height: auto;
    padding-top: 3rem;
  }

  .contact-form {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem;
    background: #00303C;
    
  }

  .header-tag {
    position: relative;
    display: inline-block;
    color:#00303C;
    background-color: #75f751;
    padding: 2rem 4rem;
    border-radius: 8px;
    transform: rotate(-7deg);
    margin-bottom: 4rem;
  }

  .header-tag h2 {
    margin: 0;
    font-size: 64px;
    width: auto;
    font-weight: bold;
    line-height: 54px;
  }

  .squart{
  position: absolute;
  width: 40px; /* Ancho del cuadrado */
  height: 40px; /* Alto del cuadrado */
  background: linear-gradient(
      to bottom left, /* Dirección de la división */
      #00303C 50%,    /* Primer color (rojo) */
      #fff 50%     /* Segundo color (azul) */
    );
    border-bottom-left-radius: 8px;
  top:-0.8px;
  right: -1.1px;
  }
  .circle {
    position: absolute;
    display: inline-block; /* Para que el span sea tratable como un elemento bloque */
    width: 15px; /* Diámetro del círculo */
    height: 15px; /* Diámetro del círculo */
    background-color: #00303C; /* Color de fondo */
    border-radius: 50%; /* Hace que el elemento sea redondo */
    top:5px;
    left: 5px;
  }

  .form-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .form-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

   .title{
    font-size: 1.2rem;
    color: #fff;
    font-weight: 600;
    
   } 
   .subtitle{
    font-size: 1rem;
    color: #fff;
    font-weight: 600;
    font-family: "Nunito", sans-serif;
   } 

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    font-size: 1.2rem;
    color: #fff;
    font-weight: 600;
  }

  input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  input:focus {
    outline: none;
    border-color: #833bf4;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .social-section h3 {
    color: #fff;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    text-decoration: none;
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }

  .fab.fa-facebook { color: #fff; }
  .fab.fa-instagram { color: #fff; }
  .fab.fa-twitter { color: #fff; }
  .fab.fa-youtube { color: #fff; }

  .social-icons a:hover {
    opacity: 0.8;
  }

  .double-inputs {
    display: grid;
    gap: 1rem;
  }

  .submit-btn {
    width: 100%;
    padding: 0.5rem 1rem;
    background: #833bf4;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .submit-btn:hover {
    background: #3e02b1;
  }

  @media (min-width: 768px) {
    .form-container {
      flex-direction: row;
    }

    .double-inputs {
      grid-template-columns: 1fr 1fr;
    }
  }


</style>