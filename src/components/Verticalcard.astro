---
interface Props {
	href: string;
    alt:string;
    src: string;
	title: string;
	body: string;
    textBagde:string;
    gradient: string;
}

const { href, title, body ,alt ,src, textBagde,gradient} = Astro.props;

import Bagde from './Bagde.astro';
---

<a href={href} class="card" style={`--card-gradient: ${gradient}`}>
    <img class="card__image" src={src} alt={alt} />
    <div class="card__content">
        <h2 class="card__title">{title}</h2>
        <p class="card__text">
        {body}
        </p>
        <Bagde text={textBagde} gradient={gradient}/>
    </div>
</a>

<style>
.card {
    display: block;
    background-color: var(--color-dark);
    border: 1px solid var(--color-dark);
    border-radius: 0.5rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    position: relative;
    transition: border-color 0.3s;
}

/* Pseudo-elemento para el borde degradado */
.card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    padding: 2px;
    background: var(--color-dark);
    background: var(--card-gradient); 
    -webkit-mask: 
        linear-gradient(var(--color-ligth) 0 0) content-box, 
        linear-gradient(var(--color-ligth) 0 0);
    -webkit-mask-composite: xor;
            mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s;
}

/* Mostrar el borde degradado al hacer hover */
.card:hover::before {
    opacity: 1;
}

/* Imagen */
.card__image {
    width: 100%;
    display: block;
}

/* Contenido */
.card__content {
    padding: 1.25rem;
}

/* TÃ­tulo */
.card__title {
    margin-bottom: 0.5rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: var(--color-ligth);
		font-size: 16px;
  	line-height: 32px;
		font-family: Biotif, sans-serif;
}

/* Texto */
.card__text {
    margin-bottom: 0.75rem;
    color: var(--color-grey);
		font-size: 16px;
  	line-height: 32px;
		font-family: Biotif, sans-serif;
}


</style>