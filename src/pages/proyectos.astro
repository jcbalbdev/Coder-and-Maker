  max-width: 700px;
  font-family: Biotif, sans-serif;
}

strong{
  color: #f2f2f2;
  font-weight: 500;
}

:root {
    --color-dark: #08070b;
    --color-parragraph: #8f9ba8;
    --color-title: #f2f2f2;
    --color-gray-200: #e5e7eb;
    --color-blue-700: #1d4ed8;
    --color-blue-300: rgba(59, 130, 246, 0.5);
}

/* Contenedor de tarjetas */
.cards-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columnas por defecto */
    gap: 1rem; /* Espacio entre tarjetas */
}

/* Ajuste para pantallas grandes */
@media (min-width: 768px) {
    .cards-container {
        grid-template-columns: repeat(3, 1fr); /* 3 columnas en pantallas grandes */
    }
}

/* Estilos generales de la tarjeta */
.card {
    display: block;
    background-color: var(--color-dark);
    border: 1px solid var(--color-dark);
    border-radius: 0.5rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    position: relative;
    transition: border-color 0.3s;
}

/* Pseudo-elemento para el borde degradado */
.card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    padding: 2px;
    background: linear-gradient(135deg, #80ffea 0%, #8aff80 100%);
    -webkit-mask: 
        linear-gradient(#fff 0 0) content-box, 
        linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
            mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s;
}

/* Mostrar el borde degradado al hacer hover */
.card:hover::before {
    opacity: 1;
}

/* Imagen */
.card__image {
    width: 100%;
    display: block;
}

/* Contenido */
.card__content {
    padding: 1.25rem;
}

/* Título */
.card__title {
    margin-bottom: 0.5rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: var(--color-title);
		font-size: 16px;
  	line-height: 32px;
		font-family: Biotif, sans-serif;
}

/* Texto */
.card__text {
    margin-bottom: 0.75rem;
    color: var(--color-parragraph);
		font-size: 16px;
  	line-height: 32px;
		font-family: Biotif, sans-serif;
}

/* Badge */
.card__badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-dark);
    background: linear-gradient(135deg, #80ffea 0%, #8aff80 100%);
    border-radius: 0.25rem;
    text-decoration: none;
}


</style>